{
    "name": "acquia/blt-project",
    "description": "Project template for Drupal 8 sites built with BLT.",
    "type": "project",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "acquia/blt": "^9.2.0",
        "drupal/acquia_contenthub": "^1.32",
        "drupal/acquia_lift": "^3.10",
        "drupal/admin_toolbar": "^1.24",
        "drupal/core": "^8.6.6",
        "drupal/ds": "^3.1",
        "drupal/features": "^3.8",
        "drupal/geofield": "^1.0@beta",
        "drupal/geofield_map": "^2.18",
        "drupal/jsonapi": "^2.0-rc4",
        "drupal/paragraphs": "^1.5",
        "drupal/quick_node_clone": "^1.11",
        "drupal/redirect": "^1.3",
        "drupal/rules": "^3.0@alpha",
        "drupal/seckit": "^1.1",
        "drupal/shield": "^1.2",
        "drupal/simplesamlphp_auth": "^3.0",
        "drupal/views_slideshow": "^4.6",
        "drupal/workbench": "^1.1",
        "drupal/workbench_access": "^1.0@beta",
        "drupal/workflow_notifications": "^1.0@alpha",
        "webflo/drupal-core-require-dev": "^8.6.0"
    },
    "require-dev": {
        "geerlingguy/drupal-vm": "^4.8"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "enable-patching": true,
        "installer-types": [
            "bower-asset",
            "npm-asset"
        ],
        "installer-paths": {
            "docroot/core": [
                "type:drupal-core"
            ],
            "docroot/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "docroot/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "docroot/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "docroot/profiles/custom/{$name}": [
                "type:drupal-custom-profile"
            ],
            "docroot/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "docroot/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ],
            "docroot/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset"
            ],
            "drush/Commands/{$name}": [
                "type:drupal-drush"
            ]
        },
        "patches": {
            "drupal/shield": {
                "IP whitelist and enable/disable option as config": "https://www.drupal.org/files/issues/2018-04-17/ip_whitelist-2855364-22.patch"
            }
        },
        "merge-plugin": {
            "require": [
                "blt/composer.required.json",
                "blt/composer.suggested.json"
            ],
            "merge-extra": true,
            "merge-extra-deep": true,
            "merge-scripts": true,
            "replace": false,
            "ignore-duplicates": true
        }
    }
}
